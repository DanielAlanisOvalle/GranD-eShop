<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.min.css">
    <link href="~/css/Layout.css" rel="stylesheet" />
    <link href="~/css/Poductos.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg rojo">
        <div class="container-fluid">
            <img onclick="location.href='@Url.Action("Productos", "Home")'" class="brandLogo" src="~/images/Logo_GranD.png" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        <button class="btn">
                            <i class="bi bi-box-seam-fill"></i> Mis pedidos
                        </button>
                    </li>
                    <li class="nav-item">
                        <button onclick="location.href='@Url.Action("Ubicacion", "Home")'" class="btn">
                            <i class="bi bi-pin-map-fill"></i> Ubicaciones
                        </button>
                    </li>
                    <li class="nav-item">
                        <button onclick="location.href='@Url.Action("Login", "Home")'" class="btn">
                            <i class="bi bi-person-fill"></i> Iniciar sesión
                        </button>
                    </li>
                    <li class="nav-item">
                        <button onclick="location.href='@Url.Action("Carrito", "Home")'" class="btn">
                            <i class="bi bi-cart-fill"></i> Mi carrito
                        </button>
                    </li>
                    <li class="nav-item">
                        <div class="d-flex">
                            <div class="input-group">
                                <input class="form-control rounded-start" type="search" placeholder="Buscar productos" aria-label="Search">
                                <button class="btn btn-sm btn-outline-light rounded-end" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg" id="Nav2">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Cupones</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Folletos</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Departamentos</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Nuevos productos</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Vive Saludable</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Exclusivos en línea</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Ofertas</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Promociones</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">Combos</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-light nav2">FAQ</button>
                </li>
            </ul>
        </div>
    </nav>
    <div class="contenedor">
        @RenderBody()
    </div>
    <div class="footer">
        <footer id="footer" class="footer">
            <div class="contenedor-footer">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="row">
                            <h4><i class="bi bi-geo-alt icon"></i> Dirección</h4>
                        </div>
                        <div class="row">
                            <p>
                                Cristóbal Colón 701, Zona Centro<br>
                                Ciudad Victoria, Tamaulipas CP 87000 - MX<br>
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 footer-links">
                        <div class="row">
                            <h4><i class="bi bi-telephone icon"></i> Contacto</h4>
                        </div>
                        <div class="row">
                            <p>
                                <strong>Teléfono:</strong> (834) 3165001<br>
                                <strong>Email:</strong> info@tiendas-grand.com.mx<br>
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 footer-links">
                        <div class="row">
                            <h4><i class="bi bi-clock icon"></i> Horarios</h4>
                        </div>
                        <div class="row">
                            <p>
                                <strong>Lunes-Domingo: </strong>7 AM - 11 PM<br>
                                ¡Te esperamos!
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 footer-links">
                        <div class="row">
                            <h4>Síguenos</h4>
                        </div>
                        <div class="row">
                            <div class="social-links d-flex">
                                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="contenedor-copyright">
                <div class="copyright">
                    © Copyright <strong><span>Tiendas GranD</span></strong>. Derechos reservados
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/jquery-3.7.1.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
